---
import Fl from "./FooterLink.astro";

interface Props {
  href: string;
  icon?: string;
  iconSrc?: string;
}

const { href, icon, iconSrc } = Astro.props;
---
<Fl href={href} isExternal={true}>
  {
  icon &&
    <div {...{ class: `icon-social ${icon}`}}>
      {/* <img {...{ src: iconSrc ?? `/assets/icons/${icon}.svg`} } /> */}
    </div>

  }
  <slot />
</Fl>

<style lang="scss">
.icon-social {
  display: inline-block;
  width: 1rem;
  height: 1rem;
  vertical-align: sub;

  img {
    width: 1rem;
    height: 1rem;
  }

  &.github {
    background: url("/assets/icons/github.svg");
  }

  &.linkedin {
    background: url("/assets/icons/linkedin.svg");
  }

  &.facebook {
    background: url("/assets/icons/facebook.svg");
  }

  &.instagram {
    background: url("/assets/icons/instagram.svg");
  }

  &.x-twitter {
    background: url("/assets/icons/x-twitter.svg");
  }

}
</style>
