---
interface Props {
	title: string;
	classes?: string;
}

const siteTitle = "ISO 24229 Registry";

let { title, classes } = Astro.props;

// Append " | siteTitle" to the provided title
title = title ?? Astro.props.frontmatter?.title ?? '';
title = title == '' ? siteTitle : `${title} | ${siteTitle}`;

classes = classes ?? Astro.props.frontmatter?.classes ?? '';

const description = "This is the official registry for the ISO 24229 standard.";

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="robots" content="none" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class={classes ?? ""}>
    <header>
      <div class="header-wrapper">
        <h1>
          <a href="/" title="Back to home">
            <div class="logo-iso">
              <img class="logo-iso" src="/iso-logo-blue-9,78,156.svg" />
            </div>
            <div class="title-text">
              ISO 24229 <span class="text-gradient">Registry</span>
            </div>
          </a>
        </h1>
        <nav>
          <menu>
            <li><a href="/">Home</a></li>
            <li><a href="/registry">Registry</a></li>
            <li><a href="/about">About</a></li>
          </menu>
        </nav>
      </div>
    </header>
    <main>
      <div class="main-wrapper">
        <slot />
      </div>
    </main>
    <footer>
      <div class="footer-wrapper">
        <div class="copyright-text">Â© All Rights Reserved</div>
        <menu class="social-links">
          <li>
            <a href="https://github.com/iso24229/iso24229.github.io" target="_blank">
              Website source code
            </a>
          </li>
          <li>
            <a href="https://github.com/iso24229/iso24229-registry" target="_blank">
              Registry data
            </a>
          </li>
        </menu>
        <div class="created-by">
          <li>
            <a href="https://www.calconnect.org/" target="_blank">
              CalConnect
            </a>
          </li>
          <li>
            <a href="https://open.ribose.com" target="_blank">
              Ribose Inc
            </a>
          </li>
        </div>
        <div class="logo-iso">
          <img class="logo-iso" src="/iso-logo-black.svg" />
        </div>
      </div>
    </footer>
  </body>
</html>
<style lang="scss" is:global>
:root {
  --default-logo-dimension: 80px;
  --content-width: 1200px;
  --accent: 26, 208, 244;
  --accent-light: 28, 248, 155;
  --accent-dark: 94, 104, 101;
  --accent-gradient: linear-gradient(
    90deg,
    rgb(var(--accent)),
    rgb(var(--accent-light)) 60%,
    rgb(var(--accent-light)) 95%
    );
  --accent-gradient-inverted: linear-gradient(
    270deg,
    rgb(var(--accent)),
    rgb(var(--accent-light)) 60%,
    rgb(var(--accent-light)) 95%
    );
  --main-padding-lr: max(1rem, calc((100% - var(--content-width))/2));
}

/* Use padding to space out the content */
* {
  margin: 0;
  box-sizing: border-box;
}

html {
  font-family: system-ui, sans-serif;
  background: #fff;
  background-size: 224px;
}

body {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

code {
  font-family:
    Menlo,
    Monaco,
    Lucida Console,
    Liberation Mono,
    DejaVu Sans Mono,
    Bitstream Vera Sans Mono,
    Courier New,
    monospace;
}

.text-gradient {
  background-image: var(--accent-gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-size: 400%;
  background-position: 0%;
}

h1 {
  font-size: 3rem;
  font-weight: 700;
  line-height: 1;
  text-align: center;

  a {
    color: black;
    display: inline-block;

    &:visited {
      color: black;
    }
  }
}

a {
  text-decoration: none;
  position: relative;
  display: inline-block;

  &:not([role=card]) {
    &:hover, &:active {
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-position: 0%;

      span.text-gradient {
        background: black;
        -webkit-background-clip: text;
      }
    }

    &:hover {
      background-image: var(--accent-gradient);
    }

    &:active {
      background-image: var(--accent-gradient-inverted);
    }
  }
}

header {
  /* padding: 1rem 0rem; */
  padding: 1rem var(--main-padding-lr);
  border-bottom: 2px solid black;
  width: 100%;

  .header-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;

    .logo-iso {
    }

    h1 {
      text-align: justify;
    }

    div {
      display: inline-block;
      vertical-align: middle;

      + div {
        padding-left: 1rem;
      }
    }

    nav {
      menu {
        display: flex;
        flex-direction: row;
        list-style-type: none;
        li + li {
          padding-left: 1rem;
        }
        a {
          font-weight: 600;
        }
      }
    }
  }
}


footer {
  padding: 2rem var(--main-padding-lr);

  border-top: 2px solid black;
  width: 100%;

  div {
    display: inline-block;
    vertical-align: middle;
  }
}

.footer-wrapper {
  display: flex;
  justify-content: space-between;
}

.logo-iso {
  /* background-color: #094e9c; */
  width: var(--default-logo-dimension);
  /* Setting the height prevents flash of layout change when loading page */
  height: var(--default-logo-dimension);
}

/* div.logo-iso { */
/*   background-image: url("/iso-logo-blue-9,78,156.svg"); */
/*   background-size: 80px; */
/*   background-repeat: no-repeat; */
/*   background-position: center; */
/* } */

main {
  flex: 1;
  padding: 2rem var(--main-padding-lr);
  width: 100%;
  /* max-width: calc(100% - 2rem); */
  font-size: 20px;
  line-height: 1.6;
}

.main-wrapper {
  h1, h2, h3, h4, h5, h6 {
    text-align: justify;
    padding-bottom: 1rem;
  }

  p {
    a {
      &::before {
        content: "";
        position: absolute;
        top: 100%;
        width: 100%;
        left: 0;
        height: 3px;
        border-radius: 2px;
        background-image: var(--accent-gradient);
      }
    }
  }
}

.attention-error {
  main {
    display: flex;
  }
  .main-wrapper {
    flex-direction: column;
    display: flex;
    justify-content: center;
  }
}

@media only screen
  and (min-width: 1px)
  and (max-width: 415px) {

  h1, h2, h3, h4, h5, h6 {
    text-align: left;
  }

  header {
    .header-wrapper {
      display: grid;
      h1, h2, h3, h4, h5, h6 {
        text-align: left;
      }

      h1 {
        font-size: max(2rem, min(3rem, 7vw));
      }

      .logo-iso {
        display: none;
      }

      .title-text {
        padding: 0;
      }

    }

    nav {
      /* background: yellow; */
      menu {
        padding: 0;
        padding-top: 1rem;
      }
    }
  }

  .main-wrapper {
    h1, h2, h3, h4, h5, h6 {
      text-align: left;
    }
  }

  footer {
    .logo-iso {
      width: min(var(--default-logo-dimension), 14vw);
      height: min(var(--default-logo-dimension), 14vw);
    }
  }

}


@media only screen
  and (min-width: 415px)
  and (max-width: 830px) {

  header {
    .header-wrapper {
      display: grid;

      h1 {
        font-size: max(2rem, min(3rem, 7vw));
      }
    }

    nav {
      /* background: yellow; */
      menu {
        padding: 1rem 0;
        padding-left: calc(1rem + min(var(--default-logo-dimension), 14vw));
      }
    }
  }

  .logo-iso {
    width: min(var(--default-logo-dimension), 14vw);
    height: min(var(--default-logo-dimension), 14vw);
  }


}

@media only screen
  and (min-width: 830px)
  and (max-width: 1200px){

  nav {
    /* background: green; */
  }

}

</style>
