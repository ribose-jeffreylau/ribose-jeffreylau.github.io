          <!-- </menu> -->
        </div>
      </div>
    </footer>
  </body>
</html>
<style lang="scss" is:global>
:root {
  --default-logo-dimension: 80px;
  --content-width: 1200px;
  --accent: 26, 208, 244;
  --accent-light: 28, 248, 155;
  --accent-dark: 94, 104, 101;
  --accent-gradient: linear-gradient(
    90deg,
    rgb(var(--accent)),
    rgb(var(--accent-light)) 60%,
    rgb(var(--accent-light)) 95%
    );
  --accent-gradient-inverted: linear-gradient(
    270deg,
    rgb(var(--accent)),
    rgb(var(--accent-light)) 60%,
    rgb(var(--accent-light)) 95%
    );
  --main-padding-lr: max(1rem, calc((100% - var(--content-width))/2));
}

/* Use padding to space out the content */
* {
  margin: 0;
  box-sizing: border-box;
}

html {
  font-family: system-ui, sans-serif;
  background: #fff;
  background-size: 224px;
}

body {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

code {
  font-family:
    Menlo,
    Monaco,
    Lucida Console,
    Liberation Mono,
    DejaVu Sans Mono,
    Bitstream Vera Sans Mono,
    Courier New,
    monospace;
}

.text-gradient {
  background-image: var(--accent-gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-size: 400%;
  background-position: 0%;
}

h1 {
  font-size: 3rem;
  font-weight: 700;
  line-height: 1;
  text-align: center;

  a {
    color: black;
    display: inline-block;

    &:visited {
      color: black;
    }
  }
}

a {
  text-decoration: none;
  position: relative;
  display: inline-block;
  color: black;

  &:not([role=card]) {
    &:hover, &:active {
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-position: 0%;

      span.text-gradient {
        background: black;
        -webkit-background-clip: text;
      }
    }

    &:hover {
      background-image: var(--accent-gradient);
    }

    &:active {
      background-image: var(--accent-gradient-inverted);
    }
  }
}

header {
  /* padding: 1rem 0rem; */
  padding: 1rem var(--main-padding-lr);
  border-bottom: 2px solid black;
  width: 100%;

  .header-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;

    .logo-iso {
    }

    h1 {
      text-align: justify;
    }

    div {
      display: inline-block;
      vertical-align: middle;

      + div {
        padding-left: 1rem;
      }
    }

    nav {
      menu {
        display: flex;
        flex-direction: row;
        list-style-type: none;
        li + li {
          padding-left: 1rem;
        }
        a {
          font-weight: 600;
        }
      }
    }
  }
}


footer {
  padding: 2rem var(--main-padding-lr);

  border-top: 2px solid black;
  width: 100%;

  div {
    display: inline-block;
    vertical-align: middle;
  }
}

.official-affiliation-notice {
  display: flex;
  flex-direction: column;
}

.footer-wrapper {
  display: flex;
  justify-content: space-between;

  ul, menu {
    padding: 0;
    list-style-type: none;
  }

  .created-by p {
    text-transform: uppercase;
    font-size: 0.5rem;
  }

  h3 {
    padding-bottom: 0.2rem;
  }
}

.logo-iso {
  /* background-color: #094e9c; */
  width: var(--default-logo-dimension);
  /* Setting the height prevents flash of layout change when loading page */
  height: var(--default-logo-dimension);
}

/* div.logo-iso { */
/*   background-image: url("/iso-logo-blue-9,78,156.svg"); */
/*   background-size: 80px; */
/*   background-repeat: no-repeat; */
/*   background-position: center; */
/* } */

main {
  flex: 1;
  padding: 2rem var(--main-padding-lr);
  width: 100%;
  /* max-width: calc(100% - 2rem); */
  font-size: 20px;
  line-height: 1.6;
}

.main-wrapper {
  h1, h2, h3, h4, h5, h6 {
    text-align: justify;
    padding-bottom: 1rem;
  }

  p {
    a {
      &::before {
        content: "";
        position: absolute;
        top: 100%;
        width: 100%;
        left: 0;
        height: 3px;
        border-radius: 2px;
        background-image: var(--accent-gradient);
      }
    }
  }
}

.attention-error {
  main {
    display: flex;
  }
  .main-wrapper {
    flex-direction: column;
    display: flex;
    justify-content: center;
  }
}

@media only screen
  and (min-width: 1px)
  and (max-width: 415px) {

  h1, h2, h3, h4, h5, h6 {
    text-align: left;
  }

  header {
    .header-wrapper {
      display: grid;
      h1, h2, h3, h4, h5, h6 {
        text-align: left;
      }

      h1 {
        font-size: max(2rem, min(3rem, 7vw));
      }

      .logo-iso {
        display: none;
      }

      .title-text {
        padding: 0;
      }

    }

    nav {
      /* background: yellow; */
      menu {
        padding: 0;
        padding-top: 1rem;
      }
    }
  }

  .main-wrapper {
    h1, h2, h3, h4, h5, h6 {
      text-align: left;
    }
  }

  footer {
    .logo-iso {
      width: min(var(--default-logo-dimension), 14vw);
      height: min(var(--default-logo-dimension), 14vw);
    }
  }

}


@media only screen
  and (min-width: 415px)
  and (max-width: 830px) {

  header {
    .header-wrapper {
      display: grid;

      h1 {
        font-size: max(2rem, min(3rem, 7vw));
      }
    }

    nav {
      /* background: yellow; */
      menu {
        padding: 1rem 0;
        padding-left: calc(1rem + min(var(--default-logo-dimension), 14vw));
      }
    }
  }

  .logo-iso {
    width: min(var(--default-logo-dimension), 14vw);
    height: min(var(--default-logo-dimension), 14vw);
  }


}

@media only screen
  and (min-width: 830px)
  and (max-width: 1200px){

  nav {
    /* background: green; */
  }

}

</style>
