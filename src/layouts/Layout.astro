---
interface Props {
	title: string;
	classes?: string;
}

const siteTitle = "ISO 24229 Registry";

let { title, classes } = Astro.props;

// Append " | siteTitle" to the provided title
title = title ?? Astro.props.frontmatter?.title ?? '';
title = title == '' ? siteTitle : `${title} | ${siteTitle}`;

classes = classes ?? Astro.props.frontmatter?.classes ?? '';

const description = "This is the official registry for the ISO 24229 standard.";

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="robots" content="none" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class={classes ?? ""}>
    <header>
      <div class="header-wrapper">
        <h1>
          <a href="/" title="Back to home">
            <div class="logo-iso">
              <img class="logo-iso" src="/iso-logo-blue-9,78,156.svg" />
            </div>
            <div class="title-text">
              ISO 24229 <span class="text-gradient">Registry</span>
            </div>
          </a>
        </h1>
        <nav>
          <menu>
            <li><a href="/">Home</a></li>
            <li><a href="/registry">Registry</a></li>
            <li><a href="/about">About</a></li>
          </menu>
        </nav>
      </div>
    </header>
    <main>
      <div class="main-wrapper">
        <slot />
      </div>
    </main>
    <footer>
      <div class="footer-wrapper">
        <div class="source-code">
          <h3>Source code</h3>
          <menu>
            <li>
              <a href="https://github.com/iso24229/iso24229.github.io" target="_blank">
                Website source code
              </a>
            </li>
            <li>
              <a href="https://github.com/iso24229/iso24229-registry" target="_blank">
                Registry data
              </a>
            </li>
          </menu>
        </div>
        <div class="created-by">
          <p>
            Powered by
          </p>
          <ul>
            <li>
              <a href="https://www.calconnect.org/" target="_blank">
                CalConnect
              </a>
            </li>
            <li>
              <a href="https://open.ribose.com" target="_blank">
                Ribose Inc
              </a>
            </li>
          </ul>
        </div>

        <menu class="social-links">
          <h3>Social</h3>
          <li>
            <a href="https://twitter.com/isostandards" target="_blank">
              ùïè.com
            </a>
          </li>
        </menu>

        <div class="official-affiliation-notice">
          <!-- <h3>Legal</h3> -->
          <div class="logo-iso">
            <a href="https://www.iso.org" target="_blank"><img class="logo-iso" src="/iso-logo-black.svg" /></a>
          </div>
          <div class="copyright-notice">
            <div>
            ¬© All Rights Reserved
            </div>
          </div>
          <div class="working-group-text">
            <a href="https://www.iso.org" target="_blank">ISO</a> / <a href="https://www.iso.org/committee/48750.html" target="_blank">TC 46</a> / WG 3
          </div>
